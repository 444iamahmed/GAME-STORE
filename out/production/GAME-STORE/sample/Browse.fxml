<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BrowseController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Rating (0-5)">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
            </Label>
            <Slider blockIncrement="1.0" majorTickUnit="1.0" max="5.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Genre">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </Label>
            <VBox fx:id="genreVBox">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="27.0" />
               </padding>
            </VBox>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Platform">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </Label>
            <VBox fx:id="platform">
               <children>
                  <CheckBox mnemonicParsing="false" text="Steam">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </CheckBox>
                  <CheckBox mnemonicParsing="false" text="Epic">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </CheckBox>
                  <CheckBox mnemonicParsing="false" text="PS4">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </CheckBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="27.0" />
               </padding>
            </VBox>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Max Price">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </Label>
            <Slider showTickLabels="true" showTickMarks="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Slider>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="31.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
          <Button fx:id="backLogin" mnemonicParsing="false" onAction="#changeSceneToLogin" text="Back To Login" />
            <Pane prefWidth="258.0" />
            <TextField />
            <Button alignment="CENTER" mnemonicParsing="false" text="Search">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Pane prefWidth="258.0" HBox.hgrow="ALWAYS" />
            <ButtonBar prefWidth="22.0">
              <buttons>
                  <HBox>
                     <children>
                        <Button fx:id="account" mnemonicParsing="false" onAction="#changeSceneToAccount" text="Account" />
                     </children>
                  </HBox>
              </buttons>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="21.0" left="25.0" right="25.0" top="24.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
   <bottom>
      <TitledPane animated="false" collapsible="false" expanded="false" text="BROWSE" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </TitledPane>
   </bottom>
   <center>
      <TableView BorderPane.alignment="CENTER">
         <columns>
            <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Name" />
            <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Developer" />
            <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Genre" />
            <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Platform" />
            <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Rating" />
            <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Price" />
         </columns>
      </TableView>
   </center>
</BorderPane>
