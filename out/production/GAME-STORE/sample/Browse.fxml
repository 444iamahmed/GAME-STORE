<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BrowseController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Rating (0-5)">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
            </Label>
            <Slider fx:id="rating" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Genre">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </Label>
            <VBox fx:id="genreVBox">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="27.0" />
               </padding>
            </VBox>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Platform">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </Label>
            <VBox fx:id="platformVBox">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="27.0" />
               </padding>
            </VBox>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Max Price">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="42.0" />
               </VBox.margin>
               <padding>
                  <Insets top="16.0" />
               </padding>
            </Label>
            <Slider fx:id="price" showTickLabels="true" showTickMarks="true">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Slider>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="31.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TableView fx:id="titles" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <VBox prefHeight="120.0" prefWidth="944.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Pane>
                     <padding>
                        <Insets left="425.0" />
                     </padding>
                  </Pane>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Browse" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="70.0" prefWidth="944.0">
               <children>
                  <Button fx:id="backLogin" mnemonicParsing="false" onAction="#changeSceneToLogin" text="Back To Login" />
                  <Pane prefWidth="258.0" />
                  <TextField fx:id="searchText" />
                  <Button fx:id="search" alignment="CENTER" mnemonicParsing="false" onAction="#Search" text="Search">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Pane prefWidth="258.0" HBox.hgrow="ALWAYS" />
                  <ButtonBar prefWidth="22.0">
                     <buttons>
                        <HBox>
                           <children>
                              <Button fx:id="account" mnemonicParsing="false" onAction="#changeSceneToAccount" text="Account" />
                           </children>
                        </HBox>
                     </buttons>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ButtonBar>
               </children>
               <padding>
                  <Insets bottom="21.0" left="25.0" right="25.0" top="30.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
