<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TextField promptText="Username or email">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Pane prefHeight="38.0" prefWidth="200.0" />
            <PasswordField promptText="Password">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="login" mnemonicParsing="false" onAction="#changeSceneToBrowse" text="Login">
               <VBox.margin>
                  <Insets left="75.0" top="35.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="100.0" top="50.0" />
         </padding>
         <BorderPane.margin>
            <Insets left="200.0" right="200.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Label alignment="CENTER" prefHeight="54.0" prefWidth="294.0" text="Sign In" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <padding>
            <Insets top="72.0" />
         </padding>
      </Label>
   </top>
</BorderPane>
